<div class="col-12 grid-margin">
  <div class="card">
    <%= form_tag('/roomfast', method: :post, id: "changePage") do %>
    <div class="card-body">
      <%= render "shared/nextback", local: {title: @title = t('room.roomfast')}%>
      <hr>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label"><%=t('room.from')%>*</label>
              <div class="col-sm-9">
                <input type="number" class="form-control name" name="start" required />
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label"><%=t('room.to')%> *</label>
              <div class="col-sm-9">
                <input type="number" class="form-control name" name="end" required />
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label"><%=t('house.house_name')%> *</label>
              <div class="col-sm-9">
                <%= select_tag "house_id", options_for_select(@houses.collect{ |u| [u.name, u.id]}), {class: "form-control", required: "required", include_blank: true } %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label"><%=t('room.maximum')%> *</label>
              <div class="col-sm-9">
                <input type="text" class="form-control name" name="amount" min="0" max="5" required />
              </div>
            </div>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label"><%=t('room.width')%> *</label>
              <div class="col-sm-9">
                <input type="text" class="form-control" name="width" required />
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label"><%=t('room.length')%> *</label>
              <div class="col-sm-9">
                <input type="text" class="form-control" name="length" required />
              </div>
            </div>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label"><%=t('room.description')%></label>
              <div class="col-sm-9">
                <textarea class="form-control textarea" name="description"></textarea>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label"><%=t('room.unit_price')%> *</label>
              <div class="col-sm-9">
                  <input type="text" class="form-control name" name="cost" required />
              </div>
            </div>
          </div>
      	</div>
      <% end %>
    </div>
  </div>
</div>
