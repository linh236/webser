<div class="col-12 grid-margin">
  <div class="card">
    <%= form_tag('/rooms', method: :post, id: "changePage") do %>
    <div class="card-body">
      <div class="row mb-2 line">
        <div class="col-sm-6">
          <h4 class="card-title ml-1">Thêm phòng</h4>
        </div>
        <div class="col-sm-6">
          <button type="submit" class="btn btn-success float-right mr-2">
            <i class="fa fa-check"></i>
            Lưu
          </button>
          <button type="button" class="btn btn-warning float-right mr-2" onclick="location.href='/houses'">
            <i class="fa fa-mail-reply"></i>
            Quay về
          </button>
        </div>
      </div>
      <hr>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label">Phòng số *</label>
              <div class="col-sm-9">
                <input type="number" class="form-control name" name="room[name]" value="<%=@room.name%>" required />
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label">Nhà *</label>
              <div class="col-sm-9">
                <%= select_tag "room[house_id]", options_for_select(@houses.collect{ |u| [u.name, u.id]}, :selected=>@room.house_id), {class: "form-control", required: "required", include_blank: true } %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label">Đơn giá *</label>
              <div class="col-sm-9">
                <input type="text" class="form-control name" name="room[cost]" value ="<%=room.cost%>" required />
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label">Số lượng người tối đa *</label>
              <div class="col-sm-9">
                <input type="text" class="form-control name" name="room[amount]" min="0" max="5" value ="<%=room.amount%>" required />
              </div>
            </div>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label">Chiều rộng *</label>
              <div class="col-sm-9">
                <input type="text" class="form-control" name="room[width]" value ="<%=room.width%>" required />
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label">Chiều dài *</label>
              <div class="col-sm-9">
                <input type="text" class="form-control" name="room[length]" value ="<%=room.length%>" required />
              </div>
            </div>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label">Mô tả</label>
              <div class="col-sm-9">
                <textarea class="form-control textarea" name="room[description]"><%=room.description%></textarea>
              </div>
            </div>
          </div>
          <!-- <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label">Đăng ảnh *</label>
              <div class="col-sm-9">
                <input type="file" class="form-control" name="room[picture]" required />
              </div>
            </div>
          </div> -->
      	</div>
      <% end %>
    </div>
  </div>
</div>
