<div class="simple-calendar mt-4">
  <div class="calendar-heading col-sm-12">
    <div class="row">
      <div class="col-sm-2 text-left">
        <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view, class: "hovernotbackground text-decoration-none btn btn-primary text-dark float-left" %>
      </div>
      <div class="col-sm-8  text-center">
        <!-- <span class="calendar-title text-center"><%= t('date.month_names')[start_date.month] %> <%=t('date.year_names') %> <%= start_date.year %></span> -->
        <span class="calendar-title text-center font-weight-bold"><%= start_date.year %></span> 
      </div>
      <div class="col-sm-2  text-right">
        <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view, class: "hovernotbackground text-decoration-none btn btn-primary text-dark pl-3 pr-3 float-right" %>
      </div>
    </div>
  </div>

  <table class="table table-striped mt-2">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th class="text-center"><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day), date: day do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
