<div class="container">
  <blockquote class="blockquote">
    <h3 class="text-center">THÊM DỊCH VỤ MỚI</h3>
    <%= form_tag('/services', method: :post) do %>
    <div class="row">
      <input type="text" required  class="form-control" name="service[name]" placeholder="Nhập tên dịch vụ">
    </div>
    <div class="row">
      <input type="text" required class="form-control" name="service[cost]" placeholder="Nhập giá dịch vụ">
    </div>
    <div class="row">
      <div class="col-sm-6">
        <input type="radio" name="service[status]" value="1"> Bắt buộc
      </div>
      <div class="col-sm-6">
        <input type="radio" name="service[status]" value="0" checked> Không bắt buộc
      </div>
    </div>
    <input type="submit" value="Gửi">
    <% end %>
  </blockquote>
</div>
<table class="table table-hover service">
  <thead>
    <tr>
      <th class="text-center">STT</th>
      <th class="text-center">Trạng thái</th>
      <th class="text-center">Dịch vụ sử dụng</th>
      <th class="text-center">Đơn giá (VNĐ)</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @services.each_with_index do |service, i|%>
    <tr>
      <td class="text-center"><%=i + 1%></td>
      <td class="text-center">
        <% if service.status == 1%>
          Bắt buộc
        <% else %>
          Không bắt buộc
        <% end %>
      </td>
      <td class="text-center"><%=service.name %></td>
      <td class="text-danger text-center"> <%=number_to_currency_br(service.cost)%></td>
      <td class="text-danger text-center">
        <a href="/services/<%= service.id%>" class="btn btn-danger btn-sm text-white" data-method="delete"  data-confirm="Bạn có muốn xóa ?">
          <i class="fa fa-trash"></i>
          Xoá
        </a>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="col-sm-3">
  <!-- <input type="text" id="searchuseservice" class="form-control search"> -->
</div>
<table class="table table-hover ">
  <thead>
    <tr>
      <th class="text-center">STT</th>
      <th class="text-center">Dịch vụ đang sử dụng</th>
      <th class="text-center">Chủ phòng</th>
      <th class="position-relative"><input type="text" id="searchuseservice" class="searchuseservice search position-absolute" placeholder="Tìm kiếm dịch vụ khách dang sử dụng"></th>
    </tr>
  </thead>
  <tbody id="useservice">
    <% @use_services.each_with_index do |use_service, i|%>
      <tr>
        <td class="text-center"><%= i +=1 %></td>
        <td class="text-center"><%= getUseService(use_service.service_id)%></td>
        <td class="text-center"><%= use_service.information&.name %></td>
        <td class="text-danger text-center">
          <a href="/use_services/<%= use_service.id%>" class="btn btn-danger btn-sm text-white" data-method="delete"  data-confirm="Bạn có muốn xóa ?">
            <i class="fa fa-trash"></i>
            Xoá
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
