<div class="container">
  <h2>Thây đổi mật khẩu</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "Mật khẩu mới" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> ký tự)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Xác nhận mật khẩu" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Lưu thay đổi", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%# <%= render "devise/shared/links" %>

</div>
